<section class="top">
  <div class="container-fluid title-container">
    <div class="row ">
      <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2 title">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-6">
            <h1>Ian</h1>

            <h1>Knox</h1>
          </div>
          <div class="col-xs-10 col-sm-10 col-md-6 col-md-offset-0 profile-image">
            <%= image_tag 'profile.jpg' %>
          </div>
        </div>
      </div>
      <div class="col-xs-6 col-xs-offset-3 col-sm-6 col-sm-offset-3 col-md-8 col-md-offset-2 subtitle">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-0 left"><h2>Developer</h2></div>
          <div class="col-xs-12 col-sm-12 col-md-6 col-md-offset-0 right"><h2>Denver CO</h2></div>
        </div>
      </div>
    </div>
  </div>
</section>
<section class="projects">
  <div class="container-fluid">
    <div class="row header-click">
      <div class="col-md-8 col-md-offset-2 header">
        <div class="row">
          <div class="col-md-6 col-md-offset-3">
            Projects
          </div>
        </div>
      </div>
    </div>
    <div class="row content">
      <div class="col-md-8 col-md-offset-2">
        <div class="row">
          <div class="col-md-5 project">
            <h1 class="project-title">Sound Locale</h1>

            <h3 class="project-subtitle">Denver Concert Aggregator</h3>

            <div class="site">
              <%= link_to '#', class: 'sl-gallery' do %>
                <%= image_tag 'sl-1.png' %>
              <% end %>
            </div>
            <div class="detail">
              <div class="row">
                <div class="col-xs-10 col-md-10 details">
                  <ul>
                    <li>Rails</li>
                    <li>Custom JS</li>
                    <li>Google Maps, Ticketfly, Stubhub</li>
                    <li>Kimono Labs</li>
                  </ul>
                </div>
                <div class="col-xs-2 col-md-2 links">
                  <div class="link">
                    <%= link_to (fa_icon 'globe'), 'http://www.sound-locale.com' %>
                  </div>
                  <div class="link">
                    <%= link_to (fa_icon 'github'), 'http://www.github.com/idknox/sound_locale_rails' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-md-5 col-md-offset-2 project">
            <h1 class="project-title">Rantly</h1>

            <h3>Twitter-like App</h3>

            <div class="site">
              <%= link_to '#', class: 'r-gallery' do %>
                <%= image_tag 'r-1.png' %>
              <% end %>
            </div>
            <div class="detail">
              <div class="row">
                <div class="col-xs-10 col-md-10 details">
                  <ul>
                    <li>Rails</li>
                    <li>Custom JS</li>
                    <li>Keen.io Analytics</li>
                    <li><%= link_to 'Pivotal Tracker Specs', 'https://www.pivotaltracker.com/n/projects/1148198' %></li>
                  </ul>
                </div>
                <div class="col-xs-2 col-md-2 links">
                  <div class="link">
                    <%= link_to (fa_icon 'globe'), 'http://ian-rantly.herokuapp.com' %>
                  </div>
                  <div class="link">
                    <%= link_to (fa_icon 'github'), 'http://www.github.com/idknox/rantly' %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="github">
  <div class="header">
    <div class="col-xs-offset-4 col-md-offset-2">
      Github
      <%= fa_icon 'chevron-down', class: 'open-button' %>
      <%= fa_icon 'chevron-up', class: 'close-button' %>
    </div>
  </div>
  <div class="col-md-offset-2 content">
    <%= @github.user.login %>
    <%= @github.user.followers %> followers
    <%= @github.user.following %> following
    <%= @github.user.public_repos %> pub repos
    joined on <%= @github.user.created_at %>
    <div id="loading">
      <div class="spinner">
      </div>
    </div>
    <div id="chart">
    </div>
  </div>
</section>
<section class="about">
  <div class="header">
    <div class="col-xs-offset-4 col-md-offset-2">
      About
      <%= fa_icon 'chevron-down', class: 'open-button' %>
      <%= fa_icon 'chevron-up', class: 'close-button' %>
    </div>
  </div>
  <div class="col-md-offset-2 content">
    <h2>Coming Soon</h2>
  </div>
</section>